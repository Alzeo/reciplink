{% extends 'admin/base.html.twig' %}

{% block title %}Modification de la recette numéro {{ recipe.id }}{% endblock %}

{% form_theme form _self %}

{% block body %}
    <div class="container-fluid mt-4" style="width: 80%;">
        <h1>Modification de la recette {{ recipe.name }}</h1>
        {{ form_start(form) }}
        <div class="row">
            <div class="col">
                <div class="card bg-light">
                    <div class="card-header">
                        <h4 class="card-title">
                            Modifier la recette
                        </h4>
                    </div>
                    <div class="card-body">
                        {{ form_widget(form) }}
                        <button type="submit" class="btn btn-primary">
                            <i class="fa fa-check"></i>
                            Enregistrer les modifications
                        </button>
                        <a onclick="return confirm('êtes vous sûr de supprimer la recette ?')" href="{{path('admin_recipes_delete', {'id': recipe.id})}}" class="btn btn-danger"><i class="fa fa-trash"></i></a>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="card bg-light">
                    <div class="card-header">
                        <h4 class="card-title">
                          Commentaires liés à la recette
                        </h4>
                    </div>
                    <div class="card-body">
                        <table class="table">
                            <thead>
                            <tr>
                                <td>id</td>
                                <td>Utilisateur</td>
                                <td>Commentaire</td>
                                <td>Action</td>
                            </tr>
                            </thead>
                            <tbody>
                            {% for comment in recipe.commentRecipe %}
                                <tr>
                                    <td>{{ comment.id }}</td>
                                    <td>{{ comment.user.username }}</td>
                                    <td>{{ comment.content }}</td>
                                    <td></td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        {{form_end(form)}}
    </div>
{% endblock %}
{% block javascripts %}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.10/js/select2.min.js"></script>
    <script>
        $('select').select2();
    </script>
    <script>
        $('#recipe_picture').on('change',function(){
            //get the file name
            var fileName = $(this).val().replace('C:\\fakepath\\', " ");
            //replace the "Choose a file" label
            $(this).next('.custom-file-label').html(fileName);
        })
    </script>
{% endblock %}