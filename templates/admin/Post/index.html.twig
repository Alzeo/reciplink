{% extends 'admin/base.html.twig' %}

{% block title %}Administration des recettes{% endblock %}

{% block body %}
    {% for message in app.flashes('success') %}
        <div class="alert alert-success" style="background: #86d9ab !important;">
            <div class="container">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <i class="fa fa-times"></i>
                </button>
                <span><i class="fa fa-bell"></i> {{ message|raw }}</span>
            </div>
        </div>
    {% endfor %}
    <div class="container-fluid">
        <h1 class="my-5">
            Gestion des Posts
            <a href="{{ path('admin_posts_new') }}" class="btn btn-primary">Cr√©er un nouvel article</a>
        </h1>

        <table class="table table-hover">
            <thead>
            <tr>
                <th>id</th>
                <th>titre</th>
                <th>actions</th>
            </tr>
            </thead>
            <tbody>
            {% for post in posts %}
                <tr>
                    <td>{{ post.id }}</td>
                    <td>{{ post.title}}</td>
                    <td>
                        <a href="#" class="btn btn-primary"><i class="fa fa-edit"></i></a>
                        <a href="#" class="btn btn-danger"><i class="fa fa-trash"></i></a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
