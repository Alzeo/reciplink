{% block title %}Recipe{% endblock %}

{% block body %}
    <h1>Recipe</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ recipe.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ recipe.name }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ recipe.type }}</td>
            </tr>
            <tr>
                <th>Dificulty</th>
                <td>{{ recipe.dificulty }}</td>
            </tr>
            <tr>
                <th>Time</th>
                <td>{{ recipe.time }}</td>
            </tr>
            <tr>
                <th>TimeUnity</th>
                <td>{{ recipe.timeUnity }}</td>
            </tr>
            <tr>
                <th>Part</th>
