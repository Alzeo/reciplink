{% extends 'base.html.twig' %}

{% block title %}RDécouvrez de nouvelles recettes Végan !{% endblock %}
{% block meta %}
    <meta name="description" content="Découvrez de nouvelles recettes saines Végan" />
    <meta property="og:title" content="Figuy - Découvrez de recettes saines végan" />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://figuy.fr/vegan" />
    <meta property="og:image" content="https://figuy.fr/library/figuyv2.png" />
{% endblock %}
{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { ; padding: 2px 6px; }
    </style>
    <div class="jumbotron text-center" style="background-image: url({{ asset ('/assets/img/background-user.jpg') }});  background-repeat: no-repeat; background-size:cover; background-position: center">
        <h2>Découvrez de nouvelles recettes Vegan</h2>
        <p>Voici toutes les recettes végan proposées par nos utilisateurs, régalez vous !</p>
    </div>
    <section class="howWork text-center container-fluid" style="padding-top: 40px; padding-bottom: 40px; width: 80%;">
        <div class="jumbotron">
            {{ form_start(form) }}
            <div class="form-row">
                <div class="col-xs-12 col-md-6 col-lg-6">
                    {{ form_row(form.type) }}
                </div>
                <div class="col-xs-12 col-md-6 col-lg-6">
                    <button class="btn btn-warning btn-block">Rechercher</button>
                </div>
                {% do form.setRendered %}
            </div>
            {{ form_end(form) }}
        </div>
        <div class="row text-center" style="margin-top:80px;">
            {% for recipe in recipes %}
                {% include 'recipe/_recipe.html.twig' %}
            {% endfor %}
        </div>
        <div class="pagination justify-content-center">
            {{ knp_pagination_render(recipes) }}
        </div>
    </section>
{% endblock %}
